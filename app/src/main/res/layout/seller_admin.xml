<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/seller_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/seller_image"
        android:layout_marginLeft="16dp"
        android:text="Seller Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/seller_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/seller_image"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/seller_name"
        android:text="seller ID"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/seller_image"
        android:layout_below="@id/seller_id"
        android:layout_marginLeft="16dp"
        android:text="Address"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/seller_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/seller_image"
        android:layout_below="@id/address"
        android:layout_marginLeft="16dp"
        android:text="Products"
        android:textSize="18sp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"/>

</RelativeLayout>
